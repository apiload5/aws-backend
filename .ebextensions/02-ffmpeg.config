packages:
  yum:
    epel-release: []

commands:
  01_install_ffmpeg:
    command: "yum install -y ffmpeg ffmpeg-devel"
    ignoreErrors: false
    
  02_verify_ffmpeg:
    command: "ffmpeg -version && echo 'FFmpeg installed successfully'"
    ignoreErrors: false
    
  03_verify_yt_dlp:
    command: "yt-dlp --version && echo 'yt-dlp installed successfully'"
    ignoreErrors: false

  04_set_temp_env:
    command: "echo 'export YTDLP_TEMP_DIR=/tmp/savemedia' >> /etc/environment"
    ignoreErrors: false
